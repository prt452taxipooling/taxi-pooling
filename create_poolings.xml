<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.project.NestedPoolingFragment" >

    <!-- TODO: Update blank fragment layout -->

     <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_alignParentTop="true" >

        <EditText
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spVehicles"
            android:layout_toLeftOf="@+id/sourceSearch"
            android:ems="10"
            android:hint="Source" />

        <EditText
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/source"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/destsearch"
            android:ems="10"
            android:hint="Destination"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/destsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/destination"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/abc_ic_search" />

        <ImageView
            android:id="@+id/sourceSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/source"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/abc_ic_search" />

        <Spinner
            android:id="@+id/spVehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:padding="10dp"
         android:id="@+id/relativeLayout6"
         android:layout_below="@+id/relativeLayout3" >

         <TextView
             android:id="@+id/tvSeats"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:text="Seats :"
             android:textSize="18dp" />

         <EditText
             android:id="@+id/etTotalSeats"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="44dp"
             android:layout_toRightOf="@+id/tvSeats"
             android:ems="10"
             android:hint="0"
             android:inputType="numberSigned" />
     </RelativeLayout>

     <RelativeLayout
         android:id="@+id/relativeLayout3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:padding="10dp"
         android:layout_below="@+id/relativeLayout1" >

         <TextView
             android:id="@+id/time1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:text="Time :"
             android:textSize="18dp" />

         <TextView
             android:id="@+id/time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:clickable="true"
             android:ems="10"
             android:hint="HH:MM"
             android:textColorHighlight="@color/yellow"
             android:textSize="18dp" />

     </RelativeLayout>

     <RelativeLayout
         android:id="@+id/relativeLayout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/relativeLayout2"
         android:padding="10dp" >

         <TextView
             android:id="@+id/date1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/date"
             android:layout_marginLeft="15dp"
             android:text="Date :"
             android:textSize="18dp" />

         <TextView
             android:id="@+id/date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:clickable="true"
             android:ems="10"
             android:hint="MM-DD-YYYY"
             android:textColorHighlight="@color/yellow"
             android:textSize="18dp" />
     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:gravity="top"
         android:layout_below="@+id/relativeLayout6" >

         <ImageView
             android:id="@+id/send"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="30dp"
             android:clickable="true"
             android:src="@drawable/create" />

     </RelativeLayout>

</RelativeLayout>