<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/customizeLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize Look" />
<RelativeLayout
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Themes"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/selectedTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/themes"
        android:layout_alignBottom="@+id/themes"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
         />
    
    </RelativeLayout>

<RelativeLayout
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/themeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Theme Colors"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/colorPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/color" />
    
     </RelativeLayout>

    <View
        android:id="@+id/viewOne"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal" 
        >
    <TextView
        android:id="@+id/radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Radius" 
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/radiusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/radius"
        android:textSize="16dp"
        android:text="value" />

    </RelativeLayout>
    
        <View
        android:id="@+id/viewTwo"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000" />

</LinearLayout>