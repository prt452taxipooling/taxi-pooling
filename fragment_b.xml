<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

            <ImageButton
                android:id="@+id/sourceSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/source"
                android:layout_alignTop="@+id/source"
                android:background="#FFD700"
                android:src="@drawable/abc_ic_search" />

            <ImageButton
                android:id="@+id/destsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/destination"
                android:layout_alignTop="@+id/destination"
                android:background="#FFD700"
                android:src="@drawable/abc_ic_search" />

            <EditText
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/source"
                android:layout_alignBottom="@+id/source"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/source"
                android:ems="10"
                android:hint="Destination" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/date"
                android:layout_alignBottom="@+id/date"
                android:layout_alignLeft="@+id/destination"
                android:ems="10"
                android:hint="Time" />

    <Spinner
        android:id="@+id/recentPoolingSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sourceSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:background="#FFD700"
        android:text="Send" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="22dp"
        android:ems="10"
        android:hint="Date" />

    <EditText
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignLeft="@+id/date"
        android:ems="10"
        android:hint="Source"
        android:shadowColor="#ffd700" />

</RelativeLayout>
