<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.project.FragmentB" >

    <Button
        android:id="@+id/bone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btwo"
        android:background="@color/ghostwhite"
        android:onClick="selectFrag"
        android:text="Create"
        android:textColor="@color/yellow" />

    <FrameLayout
        android:id="@+id/one"
        android:name="com.example.project.NestedPoolingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bone" >
    </FrameLayout>

    <Button
        android:id="@+id/btwo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one"
        android:layout_alignParentRight="true"
        android:background="@color/ghostwhite"
        android:onClick="selectFrag"
        android:text="Recent"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/internetError"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ff0000"
        android:text="No Internet Connection"
        android:visibility="gone"
        android:textColor="#ffffff" />

</RelativeLayout>
