<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile" >

    <!-- TODO: Update blank fragment layout -->

  

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/relativeLayout1">

          <ImageView
              android:id="@+id/userImage"
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="15dp"
              android:src="@drawable/picon" />

    <TextView
        android:id="@+id/userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userName"
        android:layout_below="@+id/userName"
        android:text="passenger"
        android:textSize="14dp" />

        <TextView
            android:id="@+id/userName"
            style="@style/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/userImage"
            android:layout_toRightOf="@+id/userImage"
            android:text="Noman Khan" />

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userImage"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/edit" />
        
    </RelativeLayout> 

    <ListView
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback" />

    <TextView
        android:id="@+id/internetError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff0000"
        android:gravity="center"
        android:text="No Internet Connection"
        android:textColor="#ffffff" 
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/poolingCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pooling Created"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/poolingCreatedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="10"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/userLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Location"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ulocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="unavailable"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/viewOne"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="#000000" />

    <View
        android:id="@+id/viewTwo"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:background="#000000" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/ratingComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:text="rating view"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewTwo"
        android:text="Comments"
        android:textSize="20dp" />

</RelativeLayout>