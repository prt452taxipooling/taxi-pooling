<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/userImage"
        android:text="Muhammad Noman Khan"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userName"
        android:layout_below="@+id/userName"
        android:text="passenger"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/poolingCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userImage"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:text="Pooling Created"
        android:textSize="12dp" />

    <ImageButton
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/userName"
        android:layout_alignTop="@+id/userType"
        android:background="#FFD700"
        android:src="@drawable/ic_action_edit" />

    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/poolingCreated"
        android:layout_below="@+id/poolingCreated"
        android:layout_marginTop="15dp"
        android:text="Location"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ratingComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/poolingCreated"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_marginRight="34dp"
        android:text="rating view"
        android:textSize="14dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImage"
        android:layout_toLeftOf="@+id/editProfile"
        android:isIndicator="true"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/ulocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userLocation"
        android:layout_alignBottom="@+id/userLocation"
        android:layout_alignRight="@+id/ratingComment"
        android:text="TextView"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/poolingCreatedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/poolingCreated"
        android:layout_alignBottom="@+id/poolingCreated"
        android:layout_alignLeft="@+id/ulocation"
        android:text="10"
        android:textSize="12dp" />
    
    <ListView
        android:id="@+id/commentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feedback"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ratingBar" >

    </ListView>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/editProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/picon" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/editProfile"
        android:text="Comments"
        android:textSize="20dp" />

</RelativeLayout>
