<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/un_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Someone@example.com"
        android:inputType="textEmailAddress"
        android:saveEnabled="true" />

    <EditText
        android:id="@+id/pass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/un_edittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" >
    </EditText>
    
    <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass_edittext"
                android:text="status message"
                android:textColor="#BF1E4B"
                android:textSize="16dp"
                android:visibility="invisible" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status"
        android:layout_alignRight="@+id/un_edittext"
        android:layout_below="@+id/status"
        android:background="@drawable/login_button"
        android:text="login"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/newtaxipooling_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/status"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/pass_edittext"
        android:text="New to Taxi Pooling?"
        android:textSize="18dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_alignLeft="@+id/newtaxipooling_textview"
        android:layout_alignParentRight="true"
        android:background="@drawable/signup"
        android:text="Create New Account"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</RelativeLayout>